<discord>
    <menu key="statistics">
        <message key="player_statistics">
            <embed>
                <title>Statistics {player.meta.nation}</title>
                <colour>teal</colour>
                <fields>
                    <field>
                        <name>This is accurate of {timestamp}</name>
                        <value>
                            Welcome to your nation's Stats overview. All public statistics are __LISTED HERE__.

                            :radio_button: __Nation Name__: **{player.nation}**

                            :crown: __Ruler__: **<@{player.id}>**

                            :muscle::skin-tone-1: __Total Strength__: **`{player.total_strength:,.1f}`**

                            :chart: __Economic Strength__: **`{player.economy:,.1f}`**

                            {player.government.emoji} __Government__: **{player.government}**

                            :island: __Land Area Diameter__: **`{player.land:,.2f} kilometres`**

                            :family_mwg: __Population Density__: **`{player.density:,.2f}`**

                            :star2: __Formed On__: **`{player.created}`**

                            :beginner: __Alliance__: **{player.alliance_name}**
                        </value>
                    </field>
                </fields>
            </embed>
        </message>
        <message key="finance">
            <embed>
                <title>Finance Page</title>
                <colour>teal</colour>
                <fields>
                    <field>
                        <name>Commercial Development</name>
                        <value>:dollars: {player.bank.balance}</value>
                    </field>
                </fields>
            </embed>
        </message>
    </menu>
    <message key="balance">
        <embed>
            <title>Balance {player.meta.nation}</title>
            <colour>magenta</colour>
            <fields>
                <field>
                    <name>Bank of {player.bank.name}</name>
                    <value>:dollar: {player.bank.balance}</value>
                </field>
            </fields>
        </embed>
    </message>
    <message key="Invalid Nation">
        <embed>
            <title>Invalid Nation</title>
            <colour>red</colour>
            <fields>
                <field>
                    <name>Invalid Nation</name>
                    <value>Invalid Nation</value>
                </field>
            </fields>
        </embed>
    </message>
</discord>